# Layouts
<CardLayout@BoxLayout>:
    orientation: 'vertical'

<TranslationLayout@BoxLayout>:
    orientation: 'horizontal'
    padding: 20
    spacing: 20
    size_hint: 1, None
    size: root.width, 90 

<AnswerLayout@BoxLayout>:
    orientation: 'vertical'
    spacing: 20
    padding: 10
    size_hint_y: 2

<FooterLayout@FloatLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    size: root.width, 90

<ResultLayout@FloatLayout>:
    orientation: 'vertical'

# Labels
<WordLabel@Label>:
    font_size: 30
    size_hint: 1, None
    size: root.width, 100

<AnswerLabel@Label>:
    font_size: 30
    text: ''
    valign: 'top'

    background_color: (40/255, 40/255, 40/255, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<CorrectLabel@Label>:
    font_size: 30
    text: ''
    valign: 'center'
    bold: True
    size_hint_y: .2

<ScoreLabel@Label>
    size: 75, 50
    size_hint: None, None
    font_size: 30
    text: ' / 20'
    text_size: self.size
    halign: 'left'
    valign: 'top'
    pos_hint: {'x': 55/400, 'y': 10/90}

<ScoreValue@Label>:
    size: 55, 50
    size_hint: None, None
    font_size: 30
    text: ' / 20'
    text_size: self.size
    halign: 'right'
    valign: 'top'
    pos_hint: {'y': 10/90}

<ResultLabel@Label>:
    font_size: 40
    size_hint: 1, None
    size: root.width, 100
    pos_hint: {'top': 400/600}


<ResultValue@Label>:
    font_size: 60
    size_hint: 1, None
    size: root.width, 100
    pos_hint: {'top': 300/600}

# Buttons
<NextButton@Button>:
    text: 'NEXT'
    bold: True
    font_size: 25
    disabled: True
    size: 100, 50
    size_hint: None, None
    pos_hint: {'x': 280/400, 'y': 20/90}

    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0/255, 0/255, 90/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]

<CheckButton@Button>:
    text: 'CHECK'
    bold: True
    font_size: 25
    size: 100, 50
    size_hint: None, None
    pos_hint: {'x': 0.8}

    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0/255, 0/255, 90/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]


# Inputs
<WordTextInput@TextInput>
    multiline: False
    font_size: 20
    readonly: False
    size_hint_y: None
    height: 35
    pos_hint: {'y': 7.5/50}






# Define 20 cards with unique ids
<Card1>:
    name: 'card1'
    CardLayout:
        WordLabel:
            id: word1
            text: root.word_label
        TranslationLayout:
            WordTextInput:
                id: input1
            CheckButton:
                id: check1
                on_press: root.check()
        AnswerLayout:
            CorrectLabel:
                id: correct1
                text: ''
            AnswerLabel:
                id: answer1
                text: ''
        FooterLayout:
            ScoreValue:
                id: score1
                text: '0'
            ScoreLabel:
            NextButton:
                id: next1
                on_release:
                    root.pass_score()
                    root.manager.transition.direction = 'left'
                    app.root.current = 'card2'

