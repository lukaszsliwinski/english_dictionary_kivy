ScreenManager:
    Card1:
    Card2:
    Card3:


<CardBoxLayout@BoxLayout>:
    orientation: 'vertical'
    size: root.width, root.height


# Labels
<WordLabel@Label>:
    font_size: 32

<AnswerLabel@Label>:
    font_size: 32

<ResultLabel@Label>:
    font_size: 32


# Buttons
<NextButton@Button>:
    text: 'next'
    font_size: 32
<CheckButton@Button>:
    text: 'check'
    font_size: 32


# Inputs
<WordTextInput@TextInput>
    multiline: False
    readonly: False    


<Card1>:
    name: 'card1'
    CardBoxLayout:
        WordLabel:
            text: root.word
        WordTextInput:
            id: input1
        CheckButton:
            on_press: root.check()
        AnswerLabel:
            id: answer1
            text: ''
        ResultLabel:
            id: result1
            text: '0'
        NextButton:
            on_release:
                root.pass_result()
                root.manager.transition.direction = 'left'
                app.root.current = 'card2'


